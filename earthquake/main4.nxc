
task rotate() {
	while (true) {
		RotateMotorEx(OUT_A, 100, 100, 0, false, false);
		RotateMotorEx(OUT_A, 100, -100, 0, false, false);
		ResetRotationCount(OUT_A);
	}
	//OnFwdEx(OUT_A, 30, RESET_ROTATION_COUNT);

}

task read() {
	while (true) {
		long rotation = MotorRotationCount(OUT_A);
		TextOut(0, LCD_LINE1, "        ");
		NumOut(0, LCD_LINE1, rotation);
	}
}

task main() {

	Precedes(rotate, read);

}